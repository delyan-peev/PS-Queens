<Window x:Class="QueensWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450"
        Background="White">
    <Grid Name="MainGrid">
        <Frame Name="NavigationFrame">
            
        </Frame>
        <TextBox x:Name="BoardSize" HorizontalAlignment="Left" Height="23" Margin="120,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183"  PreviewTextInput="NumberValidationTextBox" />
        <Label Content="Please, enter the number of fields you would like the board to have&#xD;&#xA;per side" HorizontalAlignment="Left" Margin="30,128,0,0" VerticalAlignment="Top" Width="379"/>
        <Button Content="Start!" HorizontalAlignment="Left" Margin="160,231,0,0" VerticalAlignment="Top" Width="108" Height="32" Click="Button_Click"/>
        <Label Content="Hello! In this game, you will first have to pick an N number for a NxN&#xD;&#xA;chess board and then try to place N queens on it without either&#xD;&#xA;of them attacking another. N should be between 4 and 8. Good luck!" HorizontalAlignment="Left" Margin="30,43,0,0" VerticalAlignment="Top" Height="63" Width="379"/>
    </Grid>
</Window>
